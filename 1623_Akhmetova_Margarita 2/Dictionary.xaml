<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цвета (Style Guide) -->
    <SolidColorBrush x:Key="BrushBgMain" Color="White"/>
    <!-- RGB(255,255,255) -->
    <SolidColorBrush x:Key="BrushBgSecondary" Color="#99FFFF"/>
    <!-- RGB(153,255,255) -->
    <SolidColorBrush x:Key="BrushAccent" Color="#0000CC"/>
    <!-- RGB(0,0,204) -->
    <SolidColorBrush x:Key="BrushText" Color="Black"/>
    <SolidColorBrush x:Key="BrushTextOnAccent" Color="White"/>
    <SolidColorBrush x:Key="BrushBorder" Color="#BFBFBF"/>

    <!-- Единый шрифт -->
    <FontFamily x:Key="AppFontFamily">Comic Sans MS</FontFamily>

    <!-- Базовые стили: общий стиль для всех Control -->
    <Style TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Окно/страницы -->
    <Style TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{StaticResource BrushBgMain}"/>
    </Style>

    <Style TargetType="{x:Type Page}">
        <Setter Property="Background" Value="{StaticResource BrushBgMain}"/>
    </Style>

    <!-- Текст -->
    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
    </Style>

    <!-- Поля ввода -->
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Margin" Value="0,6,0,6"/>
        <Setter Property="Padding" Value="10,6,10,6"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource BrushBgSecondary}"/>
    </Style>

    <Style TargetType="{x:Type PasswordBox}">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Margin" Value="0,6,0,6"/>
        <Setter Property="Padding" Value="10,6,10,6"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource BrushBgSecondary}"/>
    </Style>

    <!-- Кнопки -->
    <Style TargetType="{x:Type Button}">
        <Setter Property="Height" Value="35"/>
        <Setter Property="MinWidth" Value="140"/>
        <Setter Property="Margin" Value="0,8,0,0"/>
        <Setter Property="Padding" Value="12,6,12,6"/>
        <Setter Property="Background" Value="{StaticResource BrushAccent}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushTextOnAccent}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style TargetType="{x:Type ComboBox}">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Margin" Value="0,6,0,6"/>
        <Setter Property="Padding" Value="10,4,10,4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="Background" Value="{StaticResource BrushBgSecondary}"/>
    </Style>

    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Margin" Value="0,6,0,6"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>


</ResourceDictionary>
