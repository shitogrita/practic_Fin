<Page x:Class="Main.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавление пользователя">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин" Grid.Row="0" Grid.Column="0" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <TextBlock Text="Пароль" Grid.Row="1" Grid.Column="0" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <TextBlock Text="Роль" Grid.Row="2" Grid.Column="0" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <TextBlock Text="ФИО" Grid.Row="3" Grid.Column="0" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <TextBlock Text="Фото (необязательно)" Grid.Row="4" Grid.Column="0" Margin="10,0,0,0" VerticalAlignment="Center"/>

        <TextBox Grid.Row="0" Grid.Column="1"
                 Text="{Binding Login}"
                 ToolTip="Введите уникальный логин пользователя"/>

        <!-- ВАЖНО: вводим обычный пароль, а хеширование делаем в коде при сохранении -->
        <PasswordBox Grid.Row="1" Grid.Column="1"
                     x:Name="PbPassword"
                     ToolTip="Введите пароль (будет сохранён в виде хеша)"/>

        <ComboBox Name="cmbRole"
                  Grid.Row="2" Grid.Column="1"
                  SelectedItem="{Binding Role}"
                  SelectedIndex="1"
                  ToolTip="Выберите роль пользователя">
            <ComboBoxItem Content="Администратор"/>
            <ComboBoxItem Content="Пользователь"/>
        </ComboBox>

        <TextBox Grid.Row="3" Grid.Column="1"
                 Text="{Binding FIO}"
                 ToolTip="Введите ФИО пользователя"/>

        <TextBox Grid.Row="4" Grid.Column="1"
                 Text="{Binding Photo}"
                 ToolTip="Если поле Photo у вас строковое: укажите путь/описание. Если VARBINARY — оставьте пустым."/>

        <Button Name="ButtonSave"
                Content="Сохранить"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Margin="0,0,50,0"
                HorizontalAlignment="Right"
                ToolTip="Сохранить нового пользователя в базе данных"
                Click="ButtonSave_Click"/>
    </Grid>
</Page>
