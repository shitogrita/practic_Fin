<Page x:Class="Main.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   FontSize="22"
                   FontWeight="Bold"
                   Text="Авторизация"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" MaxWidth="420">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="TbLogin"
                     ToolTip="Введите логин пользователя (обязательное поле)"/>

            <TextBlock Text="Пароль" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PbPassword"
                         ToolTip="Введите пароль пользователя (обязательное поле)"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="BtnEnter"
                        Content="Войти"
                        ToolTip="Выполнить вход в систему"
                        Click="BtnEnter_Click"/>

                <Button x:Name="BtnToRegister"
                        Content="Регистрация"
                        ToolTip="Перейти на страницу регистрации"
                        Margin="12,8,0,0"
                        Click="BtnToRegister_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
