<Page x:Class="Main.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Регистрация"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>

        <Border Grid.Row="1"
                Padding="16"
                CornerRadius="8"
                Background="{StaticResource BrushBgSecondary}">
            <StackPanel MaxWidth="520">

                <TextBlock Text="Логин"/>
                <TextBox x:Name="TextBoxLogin"
                         ToolTip="Введите логин (уникальное значение)"/>

                <TextBlock Text="Пароль" Margin="0,10,0,0"/>
                <PasswordBox x:Name="PasswordBox"
                             ToolTip="Пароль: ≥ 6 символов, только английские буквы/цифры, минимум одна цифра"/>

                <TextBlock Text="Подтверждение пароля" Margin="0,10,0,0"/>
                <PasswordBox x:Name="PasswordBoxRepeat"
                             ToolTip="Повторите пароль для проверки совпадения"/>

                <TextBlock Text="ФИО" Margin="0,10,0,0"/>
                <TextBox x:Name="TextBoxFIO"
                         ToolTip="Введите фамилию, имя, отчество (обязательное поле)"/>

                <TextBlock Text="Роль" Margin="0,10,0,0"/>
                <ComboBox x:Name="CmbRole"
                          ToolTip="Выберите роль пользователя"
                          SelectedIndex="1">
                    <ComboBoxItem Content="Администратор"/>
                    <ComboBoxItem Content="Пользователь"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                    <Button x:Name="BtnRegister"
                            Content="Регистрация"
                            ToolTip="Создать учетную запись"
                            Click="BtnRegister_Click"/>

                    <Button Content="Назад"
                            ToolTip="Вернуться на страницу авторизации"
                            Margin="12,8,0,0"
                            Click="BtnBackToAuth_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
